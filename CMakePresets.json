{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "description": "Base preset for all other presets",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "PROJECT_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "windows-default",
      "description": "Default preset for Windows.",
      "hidden": false,
      "inherits": ["default"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/W4 /EHsc /w14242 /w14254 /w14263 /w14265 /w14287 /w14289 /w14296 /w14311 /w14545 /w14546 /w14547 /w14549 /w14555 /w14640 /w14826 /w14928 /WX"
      }
    },
    {
      "name": "linux-default",
      "description": "Default preset for Linux.",
      "hidden": false,
      "inherits": ["default"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wshadow -Wconversion -Wsign-conversion -Wcast-align -Wcast-qual -Wnull-dereference -Woverloaded-virtual -Wformat=2 -Werror"
      }
    }
  ]
}